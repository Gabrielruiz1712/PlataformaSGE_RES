<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SeleccionProyecto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Proyecto"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nombreProyectoSeleccion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nombre proyecto"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Empresa"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nombreEmpresaSeleccion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nombre empresa"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="LGAC"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lgacSeleccion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Linea de estudio"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Asesor"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/asesorSeleccion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Asesor aleatorio"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>